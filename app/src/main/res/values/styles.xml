<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberKeypadStyle">
        <item name="android:layout_margin">@dimen/keypad_button_margin</item>
    </style>

    <style name="MenuTextButtonStyle">
        <item name="android:textSize">@dimen/menu_text_view_text_size</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_marginTop">@dimen/menu_text_view_margin_top</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>